    console.log( coordinates);
</script>
<div class="row mt-3">
    <%- include("../includes/flash.ejs") %>
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                Owned by : <b><i><%= listing.owner?.username || "Unknown" %></i></b>
            </p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>
        </div>
    </div>
    <br>   
</div>

<% if(currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
  <div class="btns col-6 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
          <button class="btn btn-dark del-btn">Delete</button>
      </form>
  </div>
<% } %>

<hr>

<% if(currUser) { %> 
<div class="col-8 offset-3 mb-3">
    <br>
    <h4>Leave a Review:</h4>
    <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
        
        <fieldset class="starability-checkmark">
            <legend>Rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments:</label>
            <textarea 
                name="review[comment]" 
                id="comment" 
                cols="30" 
                rows="5" 
                class="form-control"
                required
            ></textarea>
            <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>
<% } %>
<% if (listing.reviews.length > 0) { %>
  <div class="row">
    <b><p>All Reviews:</p></b>
    <% for (review of listing.reviews) { %>
      <div class="col-md-5 mb-3">
        <div class="card review-card">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author?.username || "Unknown" %></h5>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <p class="card-text"><%= review.comment %></p>
          </div>
          <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
<% } else { %>
  <p class="text-muted"><i>No reviews yet. Be the first to leave one!</i></p>
<% } %>

<div class="col-8 offset-2 mt-4">
  <div class="card">
    <div class="card-body">
      <h3 class="mb-3">Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
</div>
<script src="/js/map.js"></script>


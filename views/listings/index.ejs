<%- layout("/layouts/boilerplate") %>

<div class="main-content">
    <%- include("../includes/flash.ejs") %>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3 g-4"> 
        <% for (let listing of allListings) { %>
            <div class="col">
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="listing-card">
                        <img src="<%= listing.image.url %>" class="listing-card-img-top" alt="listing_image">
                        <div class="listing-card-body">
                            <p class="listing-title"><%= listing.title %></p>
                            <p class="listing-location"><%= listing.location %>, <%= listing.country %></p>
                            <p class="listing-price">&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>